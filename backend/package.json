    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "dependencies": {
    "dotenv": "^9.0.2",
    "mongodb": "^3.6.7",
    "socket.io": "^4.1.2"
  },
  "devDependencies": {
    "@types/mongodb": "^3.6.14",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.26.0",
    "nodemon": "latest",
    "typescript": "^4.2.2"
  }
}
