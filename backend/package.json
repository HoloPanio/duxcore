{
  "name": "@duxcore/backend",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "scripts": {
    "compile": "tsc",
    "dev": "nodemon index.ts",
    "start": "yarn compile && node .",
    "test": "echo \"Error: no test specified\" && exit 1"
