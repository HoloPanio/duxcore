{
  "name": "duxcore",
  "private": true,
  "workspaces": [
    "website",
    "api",
    "wrapper",
    "backend"
  ],
  "scripts": {
    "commit": "cz",
    "commit:signed": "cz -S",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HoloPanio/duxcore.git"
  },
  "license": "GPL-3.0",
  "homepage": "https://github.com/HoloPanio/duxcore#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "commitizen": "^4.2.3",
    "commitlint": "~12.1.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.26.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{html,css,less,ejs}": [
      "prettier --write"
    ],
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
